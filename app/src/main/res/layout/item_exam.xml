<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <CheckBox
      android:id="@+id/checkbox_exam"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:checked="true"
      android:textColor="@color/fl_blue"/>

  <TextView
      android:id="@+id/text_exam"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_marginLeft="10dp"
      android:layout_toRightOf="@id/checkbox_exam"
      android:textColor="@color/black"/>


  <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
      android:id="@+id/progress_exam"
      android:layout_width="60dp"
      android:layout_height="4dp"
      android:layout_centerVertical="true"
      android:layout_marginLeft="20dp"
      android:layout_toRightOf="@id/text_exam"
      app:rcBackgroundColor="@color/progress_gray"
      app:rcProgressColor="@color/green_progress"
      app:rcRadius="5dip"/>

</RelativeLayout>