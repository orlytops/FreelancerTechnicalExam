<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

  <android.support.v4.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <TextView
          android:id="@+id/text_about_title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="20dp"
          android:text="@string/profile_about"
          android:textColor="@color/black"
          android:textSize="26sp"
          android:textStyle="bold"/>

      <TextView
          android:id="@+id/text_about_description"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/text_about_title"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:layout_marginTop="10dp"
          android:textColor="@color/black"/>

      <TextView
          android:id="@+id/text_skills_title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/text_about_description"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="20dp"
          android:text="@string/profile_skills"
          android:textColor="@color/black"
          android:textSize="26sp"
          android:textStyle="bold"/>

      <ListView
          android:id="@+id/list_skills"
          android:layout_width="match_parent"
          android:layout_height="100dp"
          android:layout_below="@id/text_skills_title"
          android:layout_marginLeft="14dp"
          android:layout_marginRight="20dp"
          android:layout_marginTop="10dp"/>

      <TextView
          android:id="@+id/text_skills_exams"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/list_skills"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="20dp"
          android:text="@string/profile_exams"
          android:textColor="@color/black"
          android:textSize="26sp"
          android:textStyle="bold"/>

      <ListView
          android:id="@+id/list_exams"
          android:layout_width="match_parent"
          android:layout_height="100dp"
          android:layout_below="@id/text_skills_exams"
          android:layout_marginLeft="14dp"
          android:layout_marginRight="20dp"
          android:layout_marginTop="10dp"/>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:layout_below="@id/list_exams"/>
    </RelativeLayout>

  </android.support.v4.widget.NestedScrollView>
</RelativeLayout>